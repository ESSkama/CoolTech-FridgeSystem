@model FridgeSystem.Models.Warehouse

@{
    ViewData["Title"] = "Warehouse Details";
}

<h2>Warehouse Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Address</dt>
        <dd class="col-sm-9">@Model.AddressLine1, @Model.AddressLine2</dd>

        <dt class="col-sm-3">City</dt>
        <dd class="col-sm-9">@Model.City</dd>

        <dt class="col-sm-3">Province</dt>
        <dd class="col-sm-9">@Model.Province</dd>

        <dt class="col-sm-3">Postal Code</dt>
        <dd class="col-sm-9">@Model.PostalCode</dd>

        <dt class="col-sm-3">Phone</dt>
        <dd class="col-sm-9">@Model.PhoneNumber</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>
    </dl>
</div>

<hr />

<h4>Related Records</h4>
<ul>
    <li>Employees: @Model.Employees?.Count()</li>
   @* <li>Fridges: @Model.Fridges?.Count()</li>*@
    <li>Stocks: @Model.WarehouseStocks?.Count()</li>
</ul>

<p>
    <a asp-action="Edit" asp-route-id="@Model.WarehouseId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
