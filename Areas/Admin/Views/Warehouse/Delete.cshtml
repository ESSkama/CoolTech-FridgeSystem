@model FridgeSystem.Models.Warehouse

@{
    ViewData["Title"] = "Delete Warehouse";
}

<h2>Delete Warehouse</h2>

<h4>Are you sure you want to delete this warehouse?</h4>

<div>
    <h5>@Model.Name</h5>
    <p>@Model.City, @Model.Province</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="WarehouseId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
