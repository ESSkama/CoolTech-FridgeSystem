@model IEnumerable<FridgeSystem.Models.CustomerViewModel>

@{
    ViewData["Title"] = "Manage Customers";
}

<div class="container mt-4">
    <h2 class="mb-4">Manage Customers</h2>



    <div class="mb-3">
        <a asp-action="CreateCustomer" asp-controller="User" asp-area="Admin" class="btn btn-success">
            <i class="bi bi-person-plus-fill"></i> Create New Customer
        </a>
    </div>

    <div class="row mb-3">
        <div class="col-md-12">
            <form asp-action="ManageCustomer" method="get" class="form-inline">
                <div class="form-group mr-2">
                    <label for="searchText" class="sr-only">Search</label>
                    <input type="text" name="searchText" id="searchText" class="form-control" placeholder="Search by Business, Email, Phone, Location..." value="@ViewBag.SearchText" />
                </div>
                <div class="form-group mr-2">
                    <label for="statusFilter" class="sr-only">Status</label>
                    <select name="statusFilter" id="statusFilter" class="form-control"
                            asp-items="@ViewBag.StatusOptions">
                    </select>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Apply Filters</button>
                <a asp-action="ManageCustomer" class="btn btn-secondary">Clear Filters</a>
            </form>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            No customers found matching your criteria.
        </div>
    }
    else
    {
        <table class="table table-hover table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.BusinessName)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Telephone)</th>
                    <th>Business Type</th>
                     <th>@Html.DisplayNameFor(model => model.ContactPersonName)</th>
                    <th>@Html.DisplayNameFor(model => model.TotalLocations)</th>
                    <th>@Html.DisplayNameFor(model => model.ProfileActive)</th>
                    <th>@Html.DisplayNameFor(model => model.DateCreated)</th>
                   
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.BusinessName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Telephone)</td>
                       <td> @Html.DisplayFor(modelItem => item.BusinessTypeName)</td>
                         <td> @Html.DisplayFor(modelItem => item.ContactPersonName)</td>

                        <td>@Html.DisplayFor(modelItem => item.TotalLocations)</td>
                        <td>
                            @if (item.ProfileActive)
                            {
                                <span class="badge badge-success">Active</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">Inactive</span>
                            }
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.DateCreated)</td>
                        <td>
                            <a asp-action="EditCustomer" asp-route-id="@item.BusinessId" class="btn btn-sm btn-warning">Edit</a> |
                            <a asp-action="CustomerLocations" asp-route-businessId="@item.BusinessId" class="btn btn-sm btn-primary">Locations</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@section Scripts {
    <script>
        // Optional: Add JavaScript for client-side functionality if needed
    </script>
}