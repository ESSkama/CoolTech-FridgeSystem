@model List<FridgeSystem.Models.CustomerLocationViewModel>

@{
    ViewData["Title"] = $"Branches for {ViewBag.CustomerName}";
}

<h2>@ViewData["Title"]</h2>
<hr />

<div class="mb-3">
    <a asp-action="ManageCustomer" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Customers
    </a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        No branches found for this customer.
    </div>
}
else
{
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>Branch Name</th>
                <th>Address</th>
                <th>City</th>
                <th>Province</th>
                <th>Postcode</th>
                <th>Telephone</th>
                <th>Contact Person</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var loc in Model)
            {
                <tr>
                    <td>@loc.BranchName</td>
                    <td>
                        @loc.AddressLine1<br />
                        @if (!string.IsNullOrWhiteSpace(loc.AddressLine2))
                        {
                            @loc.AddressLine2
                        }
                    </td>
                    <td>@loc.City</td>
                    <td>@loc.Province</td>
                    <td>@loc.Postcode</td>
                    <td>@loc.Telephone</td>
                    <td>@loc.ContactPerson</td>
                    <td>
                        @if (loc.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
