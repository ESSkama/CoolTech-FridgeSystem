@model IEnumerable<FridgeSystem.Models.FridgeRequest>

<h2>Fridge Requests</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Customer</th>
            <th>Date</th>
            <th>Status</th>
            <th>Fridges Requested</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model)
        {
            <tr>
                <td>@request.RequestId</td>
                <td>@request.Customer?.BusinessName</td>
                <td>@request.RequestDate.ToShortDateString()</td>
                <td>@request.Status</td>
                <td>
                    @foreach (var item in request.FridgeRequestItems)
                    {
                        <div>@item.Fridge?.Model - Qty: @item.Quantity</div>
                    }
                </td>
                <td>
                     <a asp-action="Details" asp-route-id="@request.RequestId" class="btn btn-info btn-sm">Details</a>
                    @if (request.Status == FridgeSystem.Models.RequestStatus.Pending)
                    {
                        <form method="post" asp-action="Approve" asp-route-id="@request.RequestId" style="display:inline;">
                            <button type="submit" class="btn btn-success btn-sm">Approve</button>
                        </form>
                        <form method="post" asp-action="Decline" asp-route-id="@request.RequestId" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Decline</button>
                        </form>
                    }
                    else
                    {
                        <span class="text-muted">Already @request.Status</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
