@model FridgeSystem.Models.Fridge

@{
    ViewData["Title"] = "Delete Fridge";
}

<div class="row">
    <div class="col-12">
        <h1 class="mb-4">@ViewData["Title"]</h1>
        <h3 class="text-danger">Are you sure you want to delete this fridge?</h3>
        <hr />
    </div>
</div>

<div>
    <h4>Fridge: @Model.Model</h4>
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Model)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Model)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.SerialNumber)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.SerialNumber)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Specification)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Specification)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FridgeColor)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.FridgeColor)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.StockQuantity)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.StockQuantity)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Supplier)</dt>
        <dd class="col-sm-9">@(Model.Supplier?.SupplierName ?? "N/A")</dd>
    </dl>

    <form asp-action="Delete" method="post" class="mt-4">
        <input type="hidden" asp-for="FridgeId" />
        <button type="submit" class="btn btn-danger me-2"><i class="bi bi-trash"></i> Confirm Delete</button>
        <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Cancel</a>
    </form>
</div>
