@model FridgeSystem.Models.CustomerLocationViewModel

@{
    ViewData["Title"] = "Add New Branch";
}

<h2>@ViewData["Title"] - @ViewBag.CustomerName</h2>
<hr />

<form asp-action="AddLocation" method="post">
    <input type="hidden" asp-for="BusinessId" value="@ViewBag.BusinessId" />

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="BranchName" class="form-label"></label>
        <input asp-for="BranchName" class="form-control" />
        <span asp-validation-for="BranchName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="AddressLine1" class="form-label"></label>
        <input asp-for="AddressLine1" class="form-control" />
        <span asp-validation-for="AddressLine1" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="AddressLine2" class="form-label"></label>
        <input asp-for="AddressLine2" class="form-control" />
        <span asp-validation-for="AddressLine2" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="City" class="form-label"></label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Province" class="form-label"></label>
        <input asp-for="Province" class="form-control" />
        <span asp-validation-for="Province" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Postcode" class="form-label"></label>
        <input asp-for="Postcode" class="form-control" />
        <span asp-validation-for="Postcode" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ContactPerson" class="form-label"></label>
        <input asp-for="ContactPerson" class="form-control" />
        <span asp-validation-for="ContactPerson" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Telephone" class="form-label"></label>
        <input asp-for="Telephone" class="form-control" />
        <span asp-validation-for="Telephone" class="text-danger"></span>
    </div>
    <div class="mb-3 form-check">
        <input class="form-check-input" asp-for="IsActive" checked />
        <label class="form-check-label" asp-for="IsActive"></label>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-success">Add Branch</button>
        <a asp-action="CustomerLocations" asp-route-businessId="@ViewBag.BusinessId" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}