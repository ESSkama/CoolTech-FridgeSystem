@model FridgeSystem.Models.ViewModels.PurchaseRequestViewModel

@{
    ViewData["Title"] = "Create Purchase Request";
}

<h2>Create Purchase Request</h2>


<div class="mb-3">
    <div asp-validation-summary="All" class="text-danger"></div>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="CreatePurchaseRequest" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="InventoryId" class="form-label"></label>
        <select asp-for="InventoryId" asp-items="Model.FridgeModels" class="form-select" required>
            <option value="">-- Select Fridge Model --</option>
        </select>
        <span asp-validation-for="InventoryId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" min="1" required />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ReasonForRequest" class="form-label"></label>
        @* FIX 2: Ensures the HTML required attribute is present for client-side enforcement *@
        <textarea asp-for="ReasonForRequest" class="form-control" required></textarea>
        <span asp-validation-for="ReasonForRequest" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit Request</button>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}