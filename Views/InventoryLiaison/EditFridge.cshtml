@model FridgeSystem.Models.ViewModels.FridgeInventoryViewModel

<div class="form-container">
    <h1>Edit Fridge Model</h1>
    <a asp-controller="InventoryLiaison" asp-action="Inventory" class="btn-secondary">Back to Inventory</a>

    <form asp-controller="InventoryLiaison" asp-action="EditFridge" method="post">
        @Html.AntiForgeryToken()

        <!-- Show all validation errors -->
        <div asp-validation-summary="All" class="text-danger"></div>

        <input type="hidden" asp-for="InventoryId" />

        <div class="form-group">
            <label asp-for="FridgeModel" class="form-label"></label>
            <input asp-for="FridgeModel" class="form-input" />
            <span asp-validation-for="FridgeModel" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FridgeCategory" class="form-label"></label>
            <input asp-for="FridgeCategory" class="form-input" />
            <span asp-validation-for="FridgeCategory" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="QuantityInStock" class="form-label"></label>
            <input asp-for="QuantityInStock" class="form-input" type="number" min="0" />
            <span asp-validation-for="QuantityInStock" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SupplierId" class="form-label"></label>
            <select asp-for="SupplierId" asp-items="Model.Suppliers" class="form-input">
                <option value="">-- Select Supplier --</option>
            </select>
            <span asp-validation-for="SupplierId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SelectedWarehouseId" class="form-label">Warehouse</label>
            <select asp-for="SelectedWarehouseId" asp-items="Model.WarehousesDropdown" class="form-input">
                <option value="">-- Select Warehouse --</option>
            </select>
            <span asp-validation-for="SelectedWarehouseId" class="text-danger"></span>
        </div>

        <button type="submit" class="form-button">Update Fridge Model</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
