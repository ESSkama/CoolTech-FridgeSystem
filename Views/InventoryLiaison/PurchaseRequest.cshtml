@model IEnumerable<FridgeSystem.Models.ViewModels.PurchaseRequestViewModel>
@using FridgeSystem.Models

@{
    ViewData["Title"] = "Purchase Requests";
}

<h2 class="mb-4">Purchase Requests</h2>

<div class="form-container">
    <a asp-action="CreatePurchaseRequest" class="btn btn-primary mb-3">Add New Request</a>

    <table class="table table-bordered table-striped">
        <thead class="table-light">
            <tr>
                <th>Request ID</th>
                <th>Fridge Model</th>
                <th>Quantity</th>
                <th>Requested By</th>
                <th>Status</th>
                <th>Requested Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var request in Model)
                {
                    <tr>
                        <td>@request.PurchaseRequestId</td>
                        <td>@request.FridgeModel</td>
                        <td>@request.Quantity</td>
                        <td>@request.RequestedByName</td>
                        <td>
                            @switch (request.Status)
                            {
                                case RequestStatus.Pending:
                                    <span class="badge bg-warning text-dark">Pending</span>
                                    break;
                                case RequestStatus.Approved:
                                    <span class="badge bg-success text-white">Approved</span>
                                    break;
                                case RequestStatus.Rejected:
                                    <span class="badge bg-danger text-white">Rejected</span>
                                    break;
                                default:
                                    <span>@request.Status</span>
                                    break;
                            }
                        </td>
                        <td>@request.RequestedDate?.ToString("dd MMM yyyy HH:mm")</td>
                        <td>
                            <a asp-action="EditPurchaseRequest" asp-route-id="@request.PurchaseRequestId" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="DeletePurchaseRequest" asp-route-id="@request.PurchaseRequestId" class="btn btn-danger btn-sm"
                               onclick="return confirm('Are you sure you want to delete this request?');">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">No purchase requests found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>


