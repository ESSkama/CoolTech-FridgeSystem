@model FridgeSystem.Models.FridgeFault

@{
    ViewData["Title"] = "Service Schedule";
}

<h2>Service Schedule</h2>
<hr />

<!-- Customer Details Card -->
<div class="card shadow-sm p-3 mb-4">
    <h4 class="text-primary">Customer Details</h4>
    <p><strong>Customer:</strong> @Model.CustomerFridge?.CustomerLocation?.Customer?.BusinessName</p>
    <p><strong>Branch:</strong> @Model.CustomerFridge?.CustomerLocation?.BranchName</p>
    <p><strong>Contact Person:</strong> @Model.CustomerFridge?.CustomerLocation?.ContactPerson</p>
    <p><strong>Contact Number:</strong> @Model.CustomerFridge?.CustomerLocation?.Telephone</p>
</div>

<!-- Repair Details Card -->
<div class="card shadow-sm p-3 mb-4">
    <h4 class="text-primary">Repair Schedule Details</h4>

    @if (Model.ServiceSchedules != null && Model.ServiceSchedules.Any())
    {
        @foreach (var schedule in Model.ServiceSchedules)
        {
            <p><strong>Repair Date:</strong> @schedule.StartDate.ToString("yyyy-MM-dd")</p>
            <p><strong>Repair Time:</strong> @schedule.StartDate.ToString("HH:mm")</p>
            <p><strong>Technician:</strong> @schedule.Employee?.FirstName @schedule.Employee?.LastName</p>
            <p><strong>Warehouse:</strong> @schedule.Employee?.Warehouse?.Name</p>

            <!-- Button to Open Finish Modal -->
            <button class="btn btn-success btn-sm mt-2" data-bs-toggle="modal" data-bs-target="#finishModal-@schedule.ScheduleId">
                Mark as Finished & Create Report
            </button>

            <!-- Modal -->
            <div class="modal fade" id="finishModal-@schedule.ScheduleId" tabindex="-1" aria-labelledby="finishModalLabel-@schedule.ScheduleId" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <form asp-action="CompleteRepair" method="post">
                            <div class="modal-header">
                                <h5 class="modal-title" id="finishModalLabel-@schedule.ScheduleId">Complete Repair</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>

                            <div class="modal-body">
                                <input type="hidden" name="ScheduleId" value="@schedule.ScheduleId" />
                                <input type="hidden" name="FridgeFaultId" value="@Model.FridgeFaultId" />

                                <div class="mb-3">
                                    <label class="form-label">Finish Date & Time</label>
                                    <input type="datetime-local" name="FinishDateTime" class="form-control" required />
                                </div>
                            </div>

                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary">
                                    Save & Continue to Report
                                </button>
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                    Cancel
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <hr />
        }
    }
    else
    {
        <p class="text-muted">❗ No service schedule set yet for this fault.</p>
    }
</div>
